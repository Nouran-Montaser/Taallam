<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_80sdp"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/item_book_bg">

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/donut_progress"
        android:layout_marginTop="@dimen/_5sdp"
        custom:donut_finished_color="@color/colorAccent"
        custom:donut_text_color="@color/colorAccent"
        android:layout_width="@dimen/_66sdp"
        android:layout_height="@dimen/_66sdp"
        custom:donut_text="30%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_3sdp">

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="sans-serif-condensed"
        android:text="First Book"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/about_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="sans-serif-condensed"
        android:text="30 student"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_11ssp" />
    </LinearLayout>

</LinearLayout>



