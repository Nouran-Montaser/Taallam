<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wellcome1_layout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/wellcome_item_txt1"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"
        android:padding="@dimen/_7sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_15ssp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
    <TextView
        android:id="@+id/wellcome_item_txt2"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:text="test tebncvm,bnc,vmbncv,bnc,nc,mbncv,mbnv,mbncv,mnbm,cnb,mcnb,cnbvc,mst"
        android:gravity="start"
        android:padding="@dimen/_7sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13ssp"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/check_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_check_black_24dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/wellcome_item_txt3"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/_7sdp"
        android:text="5 levels - 1 teacher - 34 student - 20 Questions"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_11ssp" />


</LinearLayout>